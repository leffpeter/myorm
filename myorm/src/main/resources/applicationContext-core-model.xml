<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd


        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <import resource="persistenceContext.xml"/>
    <import resource="ehcacheContext.xml"/>

    <!-- Enable usage of @Autowired. -->
    <context:annotation-config/>

    <!--<tx:annotation-driven />-->

    <!-- Inicializa componentes anotados -->
    <context:component-scan base-package="com.leff.myorm"/>

    <bean id="mapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
            <list>
                <!--<value>dozer/dz-global-core-model.xml</value>-->
                <value>dozer/core/usuario/usuario.xml</value>
            </list>
        </property>
    </bean>

</beans>